<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ProductFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title toolbar"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/image_view_history_transaction"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_transaction" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor telfon"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="number"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asal muatan"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_customer_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bongkar muatan"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_customer_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_customer_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="number"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edit_text_customer_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"/>

            <RadioGroup
                android:id="@+id/radio_group_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_button_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New" />

                <RadioButton
                    android:id="@+id/radio_button_ro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeat Order"
                    android:layout_marginLeft="10dp"/>

            </RadioGroup>

            <Button
                android:id="@+id/button_transaction_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button"
                android:fontFamily="@font/poppins"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/progress_bar_login"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/app_bar"
        layout="@layout/layout_progress_bar_login" />

</RelativeLayout>