<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    tools:context=".adapter.ProductInvoiceAdapter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/image_view_product_in_invoice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher_round" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_layout_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/card_view_one"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/text_view_invoice_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:textColor="@color/gray_dark"
                android:textSize="15sp"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/text_view_invoice_product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Barang"
                android:textColor="@color/gray_dark"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/linear_layout_one"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/text_view_invoice_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Jumlah"
                android:textColor="@color/gray_dark"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>