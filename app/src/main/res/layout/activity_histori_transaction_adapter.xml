<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".adapter.HistoriTransactionAdapter">

    <TextView
        android:id="@+id/text_view_history_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="invoice"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins" />

    <TextView
        android:id="@+id/text_view_history_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/text_view_history_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="address"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/text_view_history_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/text_view_history_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="note"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dark"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>